<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynotes">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvc.View.showNoteActivity"
            android:label="@string/title_activity_show_note" />
        <activity
            android:name=".mvc.View.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".mvc.View.HandlerActivity"
            android:label="@string/title_activity_handler" />
        <activity
            android:name=".mvc.View.GuideActivity"
            android:label="@string/title_activity_guide" />
        <activity android:name=".mvc.View.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>